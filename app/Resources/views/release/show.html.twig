{% extends 'base.html.twig' %}

{% block body %}
    <h1>Release</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ release.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ release.name }}</td>
            </tr>
            <tr>
                <th>Entrydate</th>
                <td>{% if release.entryDate %}{{ release.entryDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Publicationdate</th>
                <td>{% if release.publicationDate %}{{ release.publicationDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Expirationdate</th>
                <td>{% if release.expirationDate %}{{ release.expirationDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Licenseinfo</th>
                <td>{{ release.licenseInfo }}</td>
            </tr>
            <tr>
                <th>Remarks</th>
                <td>{{ release.remarks }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ release.reference }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('release_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('release_edit', { 'id': release.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
